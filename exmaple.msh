# ============================================
# Mini-Shell 完整语法示例脚本
# ============================================

# --------------------------------------------
# 1. 注释 (以 # 开头的行会被忽略)
# --------------------------------------------

# --------------------------------------------
# 2. 变量赋值
# --------------------------------------------
x = 10;
y = 20;
name = 100;

# 变量赋值给变量
z = x;

# --------------------------------------------
# 3. 算术运算 (支持 + - * / %)
# --------------------------------------------
sum = x + y;
diff = y - x;
product = x * y;
quotient = y / x;
remainder = y % 3;

# 复合运算
result = x + y * 2;

# --------------------------------------------
# 4. echo 输出
# --------------------------------------------
echo sum;
echo diff;
echo product;
echo quotient;
echo remainder;
echo "Hello World";

# --------------------------------------------
# 5. 数组操作
# --------------------------------------------
# 声明并初始化数组 (数组名[大小] = {值1, 值2, ...})
arr[5] = {10, 20, 30, 40, 50};

# 访问数组元素
echo arr[0];
echo arr[2];
echo arr[4];

# 使用变量作为索引
idx = 1;
echo arr[idx];

# 修改数组元素
arr[0] = 100;
echo arr[0];

# 将数组元素赋值给变量
val = arr[2];
echo val;

# --------------------------------------------
# 6. 比较运算符 (==, !=, >, <, >=, <=)
# --------------------------------------------

# --------------------------------------------
# 7. if 条件语句
# --------------------------------------------
a = 5;
b = 10;

# if 等于
if a == 5 {;
echo a;
}

# if 不等于
if a != 10 {;
echo a;
}

# if 大于
if b > a {;
echo b;
}

# if 小于
if a < b {;
echo a;
}

# if 大于等于
if b >= 10 {;
echo b;
}

# if 小于等于
if a <= 5 {;
echo a;
}

# --------------------------------------------
# 8. while 循环
# --------------------------------------------
# 计数循环
counter = 0;
while counter < 5 {;
counter = counter + 1;
echo counter;
}

# 使用 != 的循环
i = 3;
while i != 0 {;
echo i;
i = i - 1;
}

# --------------------------------------------
# 9. 斐波那契数列示例
# --------------------------------------------
fib_a = 0;
fib_b = 1;
fib_n = 0;
echo fib_a;
echo fib_b;
while fib_n < 8 {;
fib_c = fib_a + fib_b;
echo fib_c;
fib_a = fib_b;
fib_b = fib_c;
fib_n = fib_n + 1;
}

# --------------------------------------------
# 10. 阶乘计算示例
# --------------------------------------------
num = 5;
factorial = 1;
fact_i = 1;
while fact_i <= num {;
factorial = factorial * fact_i;
fact_i = fact_i + 1;
}
echo factorial;

# --------------------------------------------
# 11. 数组求和示例
# --------------------------------------------
numbers[5] = {1, 2, 3, 4, 5};
total = 0;
j = 0;
while j < 5 {;
temp = numbers[j];
total = total + temp;
j = j + 1;
}
echo total;

